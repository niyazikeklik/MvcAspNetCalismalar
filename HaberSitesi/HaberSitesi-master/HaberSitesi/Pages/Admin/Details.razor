@page "/admin/habers/details/{id:long}"

<h3 class="bg-info text-white text-center p-1">Details</h3>

<table class="table table-sm table-bordered table-striped">
    <tbody>
        <tr><th>ID</th><td>@Haber.HaberID</td></tr>
        <tr><th>Başlık</th><td>@Haber.Baslik</td></tr>
        <tr><th>Kategori</th><td>@Haber.Kategori</td></tr>
        <tr><th>Detay</th><td>@Haber.Detay</td></tr>
        <tr><th>Resim Yolu</th><td>@Haber.FotoURL</td></tr>
    </tbody>
</table>

<NavLink class="btn btn-warning" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/haber">Geri</NavLink>

@code { [Inject]
    public HaberSitesi.Database.DatabaseContext Repository { get; set; }

    [Parameter]
    public long Id { get; set; }

    public Haber Haber { get; set; }

    protected override void OnParametersSet()
    {
        Haber = Repository.Haberler.FirstOrDefault(p => p.HaberID == Id);
    }

    public string EditUrl => $"/admin/haber/edit/{Haber.HaberID}"; }
